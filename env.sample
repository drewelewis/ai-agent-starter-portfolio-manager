GITHUB_PAT=github_pat_your_token_here

AZURE_SUBSCRIPTION_ID=your-subscription-id

# Azure AI Foundry Resource Configuration
AZURE_OPENAI_API_ENDPOINT=https://your-foundry-instance.cognitiveservices.azure.com/
AZURE_OPENAI_API_RESOURCE_ID=/subscriptions/your-subscription-id/resourceGroups/your-rg/providers/Microsoft.CognitiveServices/accounts/your-foundry-instance

# Azure AI Foundry Project Configuration
AZURE_PROJECT_ENDPOINT=https://your-foundry-instance.services.ai.azure.com/api/projects/your-project
AZURE_PROJECT_RESOURCE_ID=/subscriptions/your-subscription-id/resourceGroups/your-rg/providers/Microsoft.CognitiveServices/accounts/your-foundry-instance/projects/your-project

# Agent Server Configuration (required by azure.ai.agentserver)
AGENT_PROJECT_RESOURCE_ID=/subscriptions/your-subscription-id/resourceGroups/your-rg/providers/Microsoft.CognitiveServices/accounts/your-foundry-instance/projects/your-project

# Model Deployment (Available: gpt-4.1, gpt-4o, text-embedding-3-small)
MODEL_DEPLOYMENT_NAME=gpt-4.1

# Azure PostgreSQL Flexible Server
POSTGRES_HOST=your-server.postgres.database.azure.com
POSTGRES_USER=your-admin-user
POSTGRES_PASSWORD=your-password
POSTGRES_DB=postgres
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=require

# Docker
DOCKER_REPO_NAME=your-dockerhub-user/ai-agent-starter-portfolio-manager

# Azure API Management MCP Server
APIM_MCP_SERVER_URL=https://your-apim-instance.azure-api.net/trading-platform-mcp-server/mcp